<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.test.web.board.dao.BoardDao">
  <insert id = "addBoard" parameterType="BoardBean">
     INSERT INTO tb_board_bjh
     (
        name
        ,email
        ,gender
        ,title
        ,content
     )
     VALUES
     (
        #{name}
        ,#{email}
        ,#{gender}
        ,#{title}
        ,#{content}
     )
  </insert>
    
  <!-- 게시글 리스트 보기 -->
  <select id="selectBoardList" resultType="BoardBean">
  		SELECT * FROM tb_board_bjh
  </select>
 
  <!-- 게시글 업데이트 -->
  <update id="updateBoard" parameterType="BoardBean">
  	UPDATE tb_board_bjh
  	SET
  		name 		= #{name}
  		,email 		= #{email}
  		,gender 	= #{gender}
  		,title 		= #{title}
  		,content	= #{content}
  	WHERE
  		no 			= #{no}
  </update>
  
  <!-- 게시글 삭제 -->
  <delete id="removeBoard" parameterType="BoardBean">
  	DELETE FROM td_board_bjh
  	WHERE	no = #{no}
  </delete>
  
  
  
  
  
  
  
  
  
  
</mapper>